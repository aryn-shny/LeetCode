# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, val=0, next=None):
#         self.val = val
#         self.next = next
class Solution:
    def addTwoNumbers(self, l1: Optional[ListNode], l2: Optional[ListNode]) -> Optional[ListNode]:
        dummy=ListNode() #LisNode created
        current=dummy #Current is pointer to dummy
        carry=0 
        while l1 or l2 or carry: #while its not NULL or isn't 0
            total=carry

            if l1:
                total+=l1.val
                l1=l1.next
            if l2:
                total+=l2.val
                l2=l2.next
            
            digit=total % 10
            carry=total // 10

            current.next=ListNode(digit) #New ListNode [digit | Null] created
            current=current.next
        return dummy.next #Returns all nodes since each node has value and next, its a chain
